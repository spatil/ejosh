
<div id = "leftinner">
  <% if @page.category_tag_cloud %>
    <div id = "leftnav_tags" style="text-align:left;">
      <%= render :partial => 'category_tag_cloud' if !@category_tags.empty?  %>
    </div>
  <% else %>
    <div id = "leftnavl" style="text-align:left;">
      <% for category in @categories %>
        <%= link_to "#{image_tag category.image.url(:small_thumb), :style => 'vertical-align:middle; margin-right:10px; margin-top:12px;'} <span>#{category.display_name}</span><br/>#{category.description}", sub_general_path(:page => @page.name, :category => get_category_permalink( category)), :class => check_active(@page, category) %>
      <img alt="" src="/images/ejoshweb3/dotline.png"/>
      <% end %>
    </div>
  <% end %>
  <% if @page.tag_cloud %>
    <div id = "leftnav_tags" style="margin-top:30px;">
      <%= render :partial => 'tag_cloud' if !@tags.empty?  %>
    </div>
  <% end %>
</div>
