<h3>Tag Cloud</h3>
<ul class="cloud">
	<% tag_cloud @tags, %w( size1 size1 size2 size3 size4 size5 size6 ) do |tag, css_class| %>
  <li>
  <%= link_to tag, tag_path(:page => @page.name, :tag => sanitize_url(tag.name)), :class =>  css_class, :title => "#{tag.count} items" %>
  </li>
	<% end %>
</ul>
