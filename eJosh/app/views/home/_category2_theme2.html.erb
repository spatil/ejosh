
<div class="inner_right">
  <div id = "shell">
    <div id = "menu_top"></div>
        <% if @page.category_tag_cloud %>
          <div id = "menu_mid_tag">
            <%= render :partial => 'category_tag_cloud' if !@category_tags.empty?  %>
          </div>
        <% else %>
          <div id = "menu_mid">
          <% for category in @categories %>
            <%= link_to category.display_name, sub_general_path(:page =>  @page.name, :category => get_category_permalink(category)), :class => check_active(@page, category) %>
          <% end %>
          </div> 
        <% end %>
    <div id = "menu_bot"></div>
    <% if @page.tag_cloud %>
      <div id = "menu_top" style="margin-top:30px;"></div>
      <div id = "menu_mid_tag">
        <%= render :partial => 'tag_cloud' if !@tags.empty?  %>
      </div>
      <div id = "menu_bot"></div>
    <% end %>
  </div>  
</div>  
