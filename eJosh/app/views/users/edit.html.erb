<div id = "wrapper">
  <%= render :partial => '/layouts/admin/top' %>
  <div id = "container">
    <%= render :partial => '/layouts/admin/category' %>
    <div id = "rightinner">
      <div id = "titlegreenleft">
        <div class="greentitle"><img src="/images/nav.png" style="vertical-align:middle; margin-right:8px;" />Users Management</div>
      </div>
      <br/><br/>
      <div id = "matterinner">
        <div id = "innerlinks">
          <%= link_to "Add Users", new_user_path, :class => "active"  %> |  
          <%= link_to "Manage Users", users_path, :class => "active"  %>  
        </div>
        <br/><br/>
        <div>
          <% form_for @user, :url =>  user_path, :method => :put do |user| %>
            <table width="531" border="0" cellspacing="0" cellpadding="0" style="background-color:#f7f7f7; border:1px solid #83954e;">
              <tr>
                <td colspan="2" align="left" valign="top" bgcolor="#cfeb79">
                  <div class="greentitle"> Add New User </div>
                </td>
              </tr>
              <%= render :partial => 'form', :locals => { :user => user } %>
            </table> 
          <% end %>
        </div>
      </div>
    <div id = "rightinnerbottom"></div>
      <br/>
    </div>
  </div>
  <div style="clear:both"></div>
</div><br/><br/><br/>
</div>
