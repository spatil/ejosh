<script type="text/javascript">
// <![CDATA[

$(document).ready(function () {
    $('#addOpt').click(function(){
      $('#delOpt').show();
      $('#addOpt').hide();
      $('.add_sections').show();
      return false;
      });
    $('#delOpt').click(function(){
      $('#delOpt').hide();
      $('#addOpt').show();
      $('.add_sections').hide();
      return false;
      });
    });

// ]]>
</script>



<form><table width="100%" border="0" cellspacing="0" cellpadding="0" style="background-color:#f7f7f7; border:0px solid #83954e;">
  <br/>
  <tr>
    <td align="right" valign="middle" width="25%" style="padding-right:30px;"><strong>Page Name  : </strong></td>
    <td align="left" valign="middle" class="tablelinks"><label>
			<%= f.text_field "name", :class =>"text" %>
      </label>    </td>
  </tr>
  <tr>
    <td align="right" valign="middle" width="25%" style="padding-right:30px;"><strong>Page Title : </strong></td>
    <td align="left" valign="middle" class="tablelinks">
			<%= f.text_field "title", :class => "text " %>
	</td>
  </tr>
  <% if advanced_user? %>
  <tr>
      <td align="left" valign="middle" ></td>
      <td align="left" valign="middle" class="tablelinks">
        <%= f.text_area "description", :class =>'text mceEditor', :rows => 5, :cols => 50%>   </td>
