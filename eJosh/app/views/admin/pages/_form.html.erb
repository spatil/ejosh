  <% end %>
  <tr>
    <td align="right" valign="middle" width="25%" style="padding-right:30px;"><strong>Keywords : </strong></td>
      <td align="left" valign="middle" class="tablelinks">
        <%= f.text_field "keywords", :class =>'text', :size => 30 %>   </td>
  </tr>
